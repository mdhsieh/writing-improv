<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--change all screen backgrounds to this color-->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!--button styles-->
    <style name="ColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">24sp</item>
        <!-- rounded cornders. Background drawable file has same accent color as regular button -->
        <item name="android:background">@drawable/roundedbutton</item>
        <!-- padding now that button is rounded -->
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!--text styles-->
    <style name="BigWhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TimerWhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">60sp</item>
    </style>

    <!--EditText-->
    <style name="EditWhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>