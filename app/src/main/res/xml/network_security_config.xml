<?xml version="1.0" encoding="utf-8"?>
<!-- enable all requests without encryption-->
<!-- app will make requests for all types of connections-->
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>